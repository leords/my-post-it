generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String
  password String
  projects Project[]

  @@map("users")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String
  status      Boolean   @default(true)
  date_start  DateTime  @default(now())
  author      String
  user        User      @relation(fields: [author], references: [id])
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String    @id @default(uuid())
  name        String
  description String
  status      Boolean   @default(true)
  date_start  DateTime  @default(now())
  project     String
  author      Project   @relation(fields: [project], references: [id])

  @@map("tasks")
}

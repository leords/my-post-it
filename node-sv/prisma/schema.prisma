
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String    
  projects Project[]

  @@map("users")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String
  status      Boolean   @default(true)
  date_start  DateTime  @default(now())
  author      String
  user        User      @relation(fields: [author], references: [id])
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String    @id @default(uuid())
  name        String
  description String
  status      Boolean   @default(true)
  date_start  DateTime  @default(now())
  project     String
  author      Project   @relation(fields: [project], references: [id])
  user        String       

  @@map("tasks")
}
